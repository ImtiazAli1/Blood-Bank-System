    <!-- DONATE BLOOD SECTION -->
    <div class="container">
      <!-- Blood Donation Form -->
      <div class="drop">
        <div class="content">
          <h2>Donate Blood</h2>
          <form class="" method="post">
            <!-- Input fields for donor information -->
            <div class="inputBox">
              <input type="number" name="age" required value="" placeholder="Age">
            </div>
            <div class="inputBox">
              <input type="text" name="sex" required value="" placeholder="Sex">
            </div>
            <div class="inputBox">
              <input type="text" name="blood_group" required value="" placeholder="Blood Group">
            </div>
            <div class="inputBox">
              <input type="number" name="quantity" required value="" placeholder="Quantity">
            </div>
            <div class="inputBox">
              <input type="number" name="phone" required value="" placeholder="Contact Number">
            </div>
            <div class="inputBox">
              <input type="email" name="email" required value="" placeholder="Email Address">
            </div>
            <!-- Submit button -->
            <div class="inputBox">
              <input type="submit" name="" required value="Submit" >
            </div>
          </form>
        </div>
      </div>
      <!-- Donation Advantages -->
      <p class="donation-advantage">Anonymous <br>Donation</p>
      <p class="donation-advantage appointment">Fast <br>Appointment</p>
